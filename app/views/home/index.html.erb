<div class="row">
<div class="span4 offset4">
<% form_tag('/', :method => :get, :remote => true, :class => 'form-search') do %>
  <p>
    <%= label_tag :name, :caption => I18n.t(:name) %>
    <%= text_field_tag :name, :placeholder => (params[:name] || I18n.t(:sample_name)), :id => 'name', :size => 12, :maxlength => 30, :required => 'required' %>
    <%= submit_tag I18n.t(:ok), :class => 'btn btn-success' %>
  </p>
<% end %>
<div id="result">
  <%= partial 'home/result' %>
</div>
</div>
</div>
