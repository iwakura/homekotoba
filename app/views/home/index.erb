<div class="row">
<div class="span4 offset4">
<% form_tag('/', :method => :get, :class => 'form-search') do %>
  <p>
    <%= label_tag :name, :caption => I18n.t(:name) %>
    <%= text_field_tag :name, :placeholder => (params[:name] || I18n.t(:sample_name)), :id => 'name', :size => 12, :maxlength => 30 %>
    <%= submit_tag I18n.t(:ok), :class => 'btn' %>
  </p>
<% end %>
<% unless @words.blank? %>
  <h5><%= escape_html params[:name] %></h5>
  <ul>
  <% @words.each do |word| %>
    <li><%= word %></li>
  <% end %>
  </ul>
  <% if Padrino.env == :production %>
    <%= image_tag "http://katavasia.heroku.com/cnt/hk.png?#{Time.now.to_i}", :width => 1, :height => 1, :alt => '' %>
  <% end %>
<% end %>
</div>
</div>
