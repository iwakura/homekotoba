<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to pat(:list), url(:name_aliases, :index) %></li>
      <li><%= link_to pat(:new), url(:name_aliases, :new) %></li>
      <li class="active"><%= link_to pat(:edit), url(:name_aliases, :edit, :id => @name_alias.id) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:edit) %> <% mt(:name_alias) %></h2>
    <div class="inner">
      <% form_for :name_alias, url(:name_aliases, :update, :id => @name_alias.id), :method => :put, :class => :form do |f| %>
        <%= partial 'name_aliases/form', :locals => { :f => f } %>
      <% end %>
    </div>
  </div>
</div>
<% content_for :sidebar, partial('base/sidebar') %>
