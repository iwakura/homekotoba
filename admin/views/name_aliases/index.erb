<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to pat(:list), url(:name_aliases, :index) %></li>
      <li><%= link_to pat(:new), url(:name_aliases, :new) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:all) %> <% mt(:name_aliases) %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"><%= mat(:name_alias, :long) %></th>
          <th><%= mat(:name_alias, :short) %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @name_aliases.each do |name_alias| %>
        <tr>
          <td class="first"><%= name_alias.long %></td>
          <td><%= name_alias.short %></td>
          <td class="last">
            <%= button_to pat(:edit), url(:name_aliases, :edit, :id => name_alias.id), :method => :get, :class => :button_to %> |
            <%= button_to pat(:delete), url(:name_aliases, :destroy, :id => name_alias.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')" %>
          </td>
        </tr>
        <% end %>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions"></div>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, partial('base/sidebar') %>
