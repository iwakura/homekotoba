<div class="group">
  <%= f.label :long %><%= f.error_message_on :long %>
  <%= f.text_field :long, :class => :text_field %>
</div>
<div class="group">
  <%= f.label :short %><%= f.error_message_on :short %>
  <%= f.text_field :short, :class => :text_field %>
</div>

<div class="group navform wat-cf">
  <%= f.submit pat(:save), :class => :button %>
  <%= f.submit pat(:cancel), :onclick => "window.location='#{url(:name_aliases, :index)}';return false", :class => :button %>
</div>
